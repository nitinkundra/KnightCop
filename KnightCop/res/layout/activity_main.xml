<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <!--
         The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc.
    -->

    <ImageView
        android:id="@+id/camShot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text=""
        android:textColor="#33b5e5"
        android:textSize="50sp"
        android:textStyle="bold" 
        android:contentDescription="@string/camshot"
        android:src="@drawable/badge"/>

    <!--
         This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows.
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true" >

        <LinearLayout
            android:id="@+id/controls"
            style="?buttonBarStyle"
            android:layout_width="match_parent"
            android:layout_height="278dp"
            android:background="@color/black_overlay"
            android:orientation="horizontal"
            tools:ignore="UselessParent" 
            android:color="#330000FF" >	<!--AARRGGBB-->

            <ImageView
                android:id="@+id/leftSlider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/left_slider"
                android:layout_gravity="left" 
                android:contentDescription="@string/camshot"/>

            <!-- Just a filler view to eat space between the
            	sliders -->
            <View
                android:id="@+id/sliderFiller"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:alpha="0" />

            <ImageView
                android:id="@+id/rightSlider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/right_slider" 
                android:contentDescription="@string/camshot"/>

        </LinearLayout>

    </FrameLayout>

</FrameLayout>

